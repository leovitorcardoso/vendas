{% extends 'base.html.twig' %}

{% block breadcrumb %}
	<li class="breadcrumb-item">Produtos</li>
{% endblock %}

{% block buttons %}
	<a href="{{ app.request.schemeAndHttpHost }}/produto/registration/" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Adicionar novo</a>
{% endblock %}

{% block body %}
	<div class="table-responsive">
		<table class="table table-hover table-condensed">
			<thead>
				<th>Código</th>
				<th>Descrição</th>
				<th class="text-right">Preço</th>
				<th class="text-right"></th>
			</thead>
			<tbody>
			{% for produto in collProdutos %}
				<tr>
					<td data-title="Código">{{ produto.getCodigo() }}</td>
					<td data-title="Descrição">{{ produto.getDescricao() }}</td>
					<td data-title="Preço" class="text-right">R$ {{ produto.getPreco()|number_format(2, '.', '.') }}</td>
					<td class="text-right">
						<a
							title="Editar"
							data-toggle="tooltip"
							href="/produto/registration/{{ produto.getId() }}"
						><i class="fa fa-edit"></i></a>
						{#<a#}
							{#class="text-danger"#}
							{#title="Excluir"#}
							{#data-toggle="tooltip"#}
							{#href="javascript:void(0);"#}
							{#data-href="/produto/delete/{{ produto.getId() }}"#}
							{#data-action="delete"#}
						{#><i class="fa fa-trash"></i></a>#}
					</td>
				</tr>
			{% endfor %}
			{% if collProdutos is empty %}
				<tr>
					<td colspan="4">Nenhum registro encontrado!</td>
				</tr>
			{% endif %}
			</tbody>
		</table>
	</div>
{% endblock %}

